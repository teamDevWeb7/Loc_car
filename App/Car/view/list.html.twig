{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des véhicules</h1>

    <table>
        <thead>
            <tr>
                <th>Modèle</th>
                <th>Marque</th>
                <th>Couleur</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.model }}</td>
                    <td>{{ voiture.marque }}</td>
                    <td style="width: 25px; height: 25px; background-color: {{ voiture.color }}; ">
                    </td>
                    <td>
                        <a href="">Modifier</a>
                        <a href="">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        
    </table>
    
    

{% endblock %}