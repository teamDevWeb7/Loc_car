{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des marques pr√©sentent en BDD</h1>

    <table>
        <thead>
            <tr>
                <th>Marque</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for marque in marques %}
                <tr>
                    <td>{{ marque.name }}</td>
                    <td>
                        <a href="{{path('marque.updateMarque', {id: marque.id})}}">Modifier</a>
                        <a href="{{path('marque.delete', {id: marque.id})}}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        
    </table>
    
    

{% endblock %}